<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False" 
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             x:Class="CRMSystemMobile.View.RegistrationPage"
             xmlns:vm="clr-namespace:CRMSystemMobile.ViewModels"
             x:DataType="vm:RegistrationViewModel"
             Title="RegistrationPage">
    
    <VerticalStackLayout BackgroundColor="#112347">
        <Grid RowDefinitions="*" BackgroundColor="#112347">
            <Ellipse 
             Fill="#ffffff"
             WidthRequest="630" 
             HeightRequest="480"
             HorizontalOptions="Center"
             VerticalOptions="Start"
             Margin="0,-280,0,0" />
            <VerticalStackLayout Spacing="0" HeightRequest="250" VerticalOptions="Start" HorizontalOptions="Center">
                <Image Source="logotype_dark.png" Margin="0, 60, 0, 0" HeightRequest="46"/>
            </VerticalStackLayout>
        </Grid>

        <VerticalStackLayout Padding="40" Spacing="15" Margin="0, -60, 0 ,0">
            <Grid Margin="0,5">
                <Border 
                 StrokeShape="RoundRectangle 5"
                 VerticalOptions="End"
                 HeightRequest="50">
                    <Entry 
                     Placeholder="Введите имя фамилию"
                     Text="{Binding NameSurname, Mode=TwoWay}"
                     VerticalOptions="Center"
                     Margin="10,0"
                     TextColor="#ffffff"
                     FontSize="16"/>
                </Border>
                <Border
                 Background="#ffffff"
                 StrokeShape="RoundRectangle 3"
                 Padding="5, 3, 5, 3"
                 HorizontalOptions="Start"
                 VerticalOptions="Start"
                 Margin="15,-15,0,0"
                 ZIndex="1">
                    <Label 
                     Text="Имя" 
                     FontSize="14"
                     TextColor="#112347"/>
                </Border>
            </Grid>

            <Grid Margin="0,10">
                <Border 
                 StrokeShape="RoundRectangle 5"
                 VerticalOptions="End"
                 HeightRequest="50">
                    <Entry 
                      Placeholder="Введите номер телефона"
                      Text="{Binding ClientPhoneNumber, Mode=TwoWay}"
                      VerticalOptions="Center"
                      Margin="10,0"
                      TextColor="#ffffff"
                      FontSize="16"/>
                </Border>
                <Border
                 Background="#ffffff"
                 StrokeShape="RoundRectangle 3"
                 Padding="5, 3, 5, 3"
                 HorizontalOptions="Start"
                 VerticalOptions="Start"
                 Margin="15,-15,0,0"
                 ZIndex="1">
                    <Label 
                     Text="Телеофон" 
                     FontSize="14"
                     TextColor="#112347"/>
                </Border>
            </Grid>

            <Grid Margin="0,5">
                <Border 
                 StrokeShape="RoundRectangle 5"
                 VerticalOptions="End"
                 HeightRequest="50">        
                    <Entry 
                     Placeholder="Введите почту"
                     Text="{Binding ClientEmail, Mode=TwoWay}"
                     VerticalOptions="Center"
                     Margin="10,0"
                     TextColor="#ffffff"
                     FontSize="16"/>
                </Border>
                <Border
                 Background="#ffffff"
                 StrokeShape="RoundRectangle 3"
                 Padding="5, 3, 5, 3"
                 HorizontalOptions="Start"
                 VerticalOptions="Start"
                 Margin="15,-15,0,0"
                 ZIndex="1">
                    <Label 
                     Text="Почта" 
                     FontSize="14"
                     TextColor="#112347"/>
                </Border>
            </Grid>

            <Grid Margin="0,10">
                <Border 
                 StrokeShape="RoundRectangle 5"
                 VerticalOptions="End"
                 HeightRequest="50">
                    <Entry 
                     Placeholder="Введите логин"
                     Text="{Binding UserLogin, Mode=TwoWay}"
                     VerticalOptions="Center"
                     Margin="10,0"
                     TextColor="#ffffff"
                     FontSize="16"/>
                </Border>
                <Border
                 Background="#ffffff"
                 StrokeShape="RoundRectangle 3"
                 Padding="5, 3, 5, 3"
                 HorizontalOptions="Start"
                 VerticalOptions="Start"
                 Margin="15,-15,0,0"
                 ZIndex="1">
                    <Label 
                     Text="Логин" 
                     FontSize="14"
                     TextColor="#112347"/>
                </Border>
            </Grid>

            <Grid Margin="0,10">
                <Border 
                 StrokeShape="RoundRectangle 5"
                 VerticalOptions="End"
                 HeightRequest="50">
                    <Entry 
                     IsPassword="True"
                     Placeholder="Введите пароль"
                     Text="{Binding UserPassword, Mode=TwoWay}"
                     VerticalOptions="Center"
                     Margin="10,0"
                     TextColor="#ffffff"
                     FontSize="16"/>
                </Border>
                <Border
                 Background="#ffffff"
                 StrokeShape="RoundRectangle 3"
                 Padding="5, 3, 5, 3"
                 HorizontalOptions="Start"
                 VerticalOptions="Start"
                 Margin="15,-15,0,0"
                 ZIndex="1">
                    <Label 
                     Text="Пароль" 
                     FontSize="14"
                     TextColor="#112347"/>
                </Border>
            </Grid>



            <Button 
             Text="Зарегистрироваться " 
             Command="{Binding RegisterCommand}"
             BackgroundColor="#ffffff" 
             TextColor="#112347"
             FontSize="16"
             FontAttributes="Bold"/>
            <Button 
             Text="Войти" 
             Command="{Binding GoToLoginCommand}"
             BackgroundColor ="#112347" 
             TextColor="#ffffff"
             FontSize="14"
             FontAttributes="None"/>
            
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>