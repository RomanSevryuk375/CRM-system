<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRMSystemMobile.MainPage">

    <VerticalStackLayout BackgroundColor="{StaticResource PrimaryBlue}">
        <Grid RowDefinitions="*" BackgroundColor="{StaticResource PrimaryBlue}">
            <Ellipse 
                Fill="{StaticResource CleanWhite}"
                WidthRequest="630" 
                HeightRequest="480"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Margin="0,-180,0,0" />
            <VerticalStackLayout Spacing="0" HeightRequest="250" VerticalOptions="Start" HorizontalOptions="Center">
                <Image Source="logotype_dark.png" Margin="0, 120, 0, 0" HeightRequest="46"/>
            </VerticalStackLayout>
        </Grid>

        <VerticalStackLayout Padding="40" Spacing="15" Margin="0, 50, 0 ,0">
            <Grid Margin="0,5">
                <Border 
                    StrokeShape="RoundRectangle 5"
                    VerticalOptions="End"
                    HeightRequest="50">
                    <Entry 
                        Placeholder="Введите логин"
                        VerticalOptions="Center"
                        Margin="10,0"
                        TextColor="{StaticResource CleanWhite}"
                        FontSize="16"/>
                </Border>
                <Border
                    Background="{StaticResource CleanWhite}"
                    StrokeShape="RoundRectangle 3"
                    Padding="5, 3, 5, 3"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="15,-15,0,0"
                    ZIndex="1">
                    <Label 
                        Text="Логин" 
                        FontSize="14"
                        TextColor="{StaticResource PrimaryBlue}"/>
                </Border>
            </Grid>

            <Grid Margin="0,10">
                <Border 
                    StrokeShape="RoundRectangle 5"
                    VerticalOptions="End"
                    HeightRequest="50">
                    <Entry 
                         IsPassword="True"
                         Placeholder="Введите пароль"
                         VerticalOptions="Center"
                         Margin="10,0"
                         TextColor="{StaticResource CleanWhite}"
                         FontSize="16"/>
                </Border>
                <Border
                    Background="{StaticResource CleanWhite}"
                    StrokeShape="RoundRectangle 3"
                    Padding="5, 3, 5, 3"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="15,-15,0,0"
                    ZIndex="1">
                    <Label 
                        Text="Пароль" 
                        FontSize="14"
                        TextColor="{StaticResource PrimaryBlue}"/>
                </Border>
            </Grid>

            <Button 
                Text="Войти" 
                BackgroundColor="{StaticResource CleanWhite}" 
                TextColor="{StaticResource PrimaryBlue}"
                FontSize="16"
                FontAttributes="Bold"/>
            <Button 
                Text="Зарегистрироваться" 
                BackgroundColor ="{StaticResource PrimaryBlue}" 
                TextColor="{StaticResource CleanWhite}"
                FontSize="14"
                FontAttributes="None"/>

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
