<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CRMSystemMobile.ViewModels"
             x:Class="CRMSystemMobile.View.BookingPage"
             x:DataType="vm:BookingViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#112347"
             Title="Запись на сервис">

    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="15, 20" HeightRequest="80">
            <ImageButton Grid.Column="0"
                         Source="back_arrow.png" 
                         HeightRequest="24"
                         HorizontalOptions="Start"
                         Command="{Binding GoBackCommand}"/>

            <Label Grid.Column="1" 
                   Text="Новая заявка" 
                   TextColor="White" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Margin="-24,0,0,0"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="30">

                <VerticalStackLayout Spacing="5">
                    <Label Text="Автомобиль" TextColor="#ACACAC" FontSize="12"/>
                    <Border StrokeShape="RoundRectangle 5" BackgroundColor="#213868" StrokeThickness="0" Padding="15">
                        <Grid ColumnDefinitions="Auto, *">
                            <Image Grid.Column="0" Source="car.png" HeightRequest="40" WidthRequest="40" Margin="0,0,15,0"/>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label TextColor="White" FontSize="16" FontAttributes="Bold">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding SelectedCar.Brand}"/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding SelectedCar.Model}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Text="{Binding SelectedCar.StateNumber}" TextColor="#FFB347" FontSize="14"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Желаемая дата" TextColor="#ACACAC" FontSize="12"/>
                    <Border StrokeShape="RoundRectangle 5" HeightRequest="50" BackgroundColor="#213868" StrokeThickness="0">
                        <DatePicker Date="{Binding SelectedDate}"
                                    MinimumDate="{Binding MinDate}"
                                    TextColor="White"
                                    Margin="10,0"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Приоритет срочности" TextColor="#ACACAC" FontSize="12"/>
                    <Border StrokeShape="RoundRectangle 5" HeightRequest="50" BackgroundColor="#213868" StrokeThickness="0">
                        <Picker ItemsSource="{Binding Priorities}"
                                SelectedItem="{Binding SelectedPriorityName}"
                                TextColor="White"
                                TitleColor="Gray"
                                Margin="10,0"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="5">
                    <Label Text="Что случилось? (Жалобы, описание работ)" TextColor="#ACACAC" FontSize="12"/>
                    <Border StrokeShape="RoundRectangle 5" HeightRequest="100" BackgroundColor="#213868" StrokeThickness="0">
                        <Editor Text="{Binding Description}"
                                Placeholder="Стучит подвеска, нужно поменять масло..."
                                PlaceholderColor="Gray"
                                TextColor="White"
                                Margin="10,5"
                                AutoSize="TextChanges"/>
                    </Border>
                </VerticalStackLayout>

                <Button Text="Отправить заявку" 
                        Command="{Binding BookAppointmentCommand}"
                        BackgroundColor="#3296F8" 
                        TextColor="White"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        Margin="0,20,0,0"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>